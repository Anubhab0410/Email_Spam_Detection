{
  "manifest_version": 3,
  "name": "Gmail Spam Detector",
  "version": "2.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://mail.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}